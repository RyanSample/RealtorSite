@model IEnumerable<RealMax.Models.Realtor>

@{ 
    int counter = 0;
}

@foreach (var item in Model)
{
    if (counter >= 3)
    {
        break;
    }
    counter++;
    <div class="col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Details", "Realtor", new { id = item.ID })">
                @{string source = "~/Content/Images/Realtor/" + item.ID.ToString();

                }
                <img src="@Url.Content(source) " alt="..." onerror="this.onerror = null; this.src='@Url.Content("~/Content/Images/Realtor/NoImage.jpg")';" />
                <div class="caption">
                    <h3>
                        @Html.DisplayFor(modelItem => item.FirstName)

                        @Html.DisplayFor(modelItem => item.LastName)
                    </h3>
                    <p>
                        @Html.DisplayFor(modelItem => item.Email)
                    </p>
                </div>
            </a>
        </div>
    </div>
}

