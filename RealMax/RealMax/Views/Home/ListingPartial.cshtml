@model IEnumerable<RealMax.Models.Listing>

@{
    int counter = 0;
}

@foreach (var item in Model)
{
    if (counter >= 3)
    {
        break;
    }
    counter++;
    <div class="col-md-4 listing-item">
        <div class="thumbnail">
            <a href="@Url.Action("Details", "Listing", new { id = item.ListID })">
                @{
                    string source = "~/Content/Images/Listing/" + item.ListID.ToString() + "/thumbnail.jpg";

                }
                <img src="@Url.Content(source) " alt="..." class="img-responsive img-center img-min-height" onerror="this.onerror = null; this.src='@Url.Content("~/Content/Images/Listing/NoImage.jpg")';" />

                <div class="caption">
                    <h3 class="text-center">
                        @Html.DisplayFor(modelItem => item.Price)
                    </h3>
                    <h4 class="text-center">
                        @Html.DisplayFor(modelItem => item.HouseNumber)
                        @Html.DisplayFor(modelItem => item.StreetName)
                        @Html.DisplayFor(modelItem => item.ApartmentNumber)
                    </h4>

                    <p class="text-center">
                        @Html.DisplayFor(modelItem => item.Bed)
                        BD | @Html.DisplayFor(modelItem => item.Bath)
                        BA | @Html.DisplayFor(modelItem => item.SquareFeet)
                        Sq. Ft.
                    </p>

                    @*@Html.DisplayFor(modelItem => item.LotSize)*@
                </div>

            </a>
        </div>
    </div>
}
