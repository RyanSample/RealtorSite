@model IEnumerable<RealMax.Models.Realtor>

@{
    ViewBag.Title = "Index";
}
@section head {
    @*<link rel="stylesheet" href="@Url.Content("~/Content/css/searchStyleSheets/searchIndexStyleSheet.css")" type="text/css" />*@
    @Styles.Render("~/Content/searchStyleSheets");
    }

<div class="container">
    <h2>Index</h2>

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <div class="row">
        <form class="navbar-form navbar-left" role="search" method="get" action="@Url.Action("Index", "Realtor")">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" name="id">
            </div>
            <button type="submit" value="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        </form>
    </div>
    @foreach (var item in Model)
    {

        <div class="col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "Realtor", new { id = item.ID })">
                    @{string source = "~/Content/Images/Realtor/" + item.ID.ToString();

                    }
                    <img src="@Url.Content(source) " alt="..." onerror="this.onerror = null; this.src='@Url.Content("~/Content/Images/Realtor/NoImage.jpg")';" />
                    <div class="caption">
                        <h3>
                            @Html.DisplayFor(modelItem => item.FirstName)

                            @Html.DisplayFor(modelItem => item.LastName)
                        </h3>
                        <p>
                            @Html.DisplayFor(modelItem => item.Email)
                        </p>
                    </div>
                </a>
            </div>
        </div>
        @*<td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>*@

                        }
    <div class="row"></div> @*added for formating*@

</div>



