@model IEnumerable<RealMax.Models.Realtor>

@{
    ViewBag.Title = "Index";
}
@section head {
    @*<link rel="stylesheet" href="@Url.Content("~/Content/css/searchStyleSheets/searchIndexStyleSheet.css")" type="text/css" />*@
    @Styles.Render("~/Content/searchStyleSheets");
    }

<div class="container">
    <div class="row">
        <form class="navbar-form navbar-left" role="search" method="get" action="@Url.Action("Index", "Realtor")">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" name="id">
            </div>
            <button type="submit" value="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        </form>
    </div>
    @foreach (var item in Model)
    {

        <div class="col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "Realtor", new { id = item.ID })">
                    @{string source = "~/Content/Images/Realtor/" + item.ID.ToString() + "/thumbnail.jpg";

                    }
                    <img src="@Url.Content(source) " alt="..." class="img-responsive img-center img-min-height" onerror="this.onerror = null; this.src='@Url.Content("~/Content/Images/Realtor/NoImage.jpg")'; console.log('error loading resource');" />
                    <div class="caption">
                        <h3 class="text-center">
                            @Html.DisplayFor(modelItem => item.FirstName)

                            @Html.DisplayFor(modelItem => item.LastName)
                        </h3>
                        <p class="text-center">
                            @Html.DisplayFor(modelItem => item.Email)
                        </p>
                    </div>
                </a>
            </div>
        </div>                        }
    <div class="row"></div> @*added for formating*@

</div>



