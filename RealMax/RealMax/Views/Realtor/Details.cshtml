@model RealMax.Models.Realtor

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <br />

    <div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-4 col-md-offset-4 col-sm-offset-4">
            @{
                string source = "~/Content/Images/Realtor/" + Model.ID;
            }
            <img class="img-center" src="@Url.Content(source) " alt="..." onerror="this.onerror = null; this.src='@Url.Content("~/Content/Images/Realtor/NoImage.jpg")';" />

        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-4 col-md-offset-4 col-sm-offset-4">
            <h3 >
                @Html.DisplayFor(model => model.FirstName)
                @Html.DisplayFor(model => model.LastName)
            </h3>
            <h4>
                <b>@Html.DisplayNameFor(model => model.Email)</b>
                @Html.DisplayFor(model => model.Email)
            </h4>
            <h4>
                <b>@Html.DisplayNameFor(model => model.PhoneNumber)</b>
                @Html.DisplayFor(model => model.PhoneNumber)
            </h4>
            <p>
                @Html.ActionLink("Back to Realtors", "Index")
            </p>
        </div>
    </div>

</div>